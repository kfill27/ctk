<p id="notice"><%= notice %></p>

<h1>Creative Tech Kids Blog</h1>
  <% @posts.each do |post| %>
    <h3><%= post.title %></h3>
    <p><%= post.content %></p>
    <%= link_to 'Show', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
